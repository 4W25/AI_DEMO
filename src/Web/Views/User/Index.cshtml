@{
    ViewData["Title"] = "使用者管理";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>使用者管理</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">首頁</a></li>
                        <li class="breadcrumb-item active">使用者管理</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">使用者列表</h3>
                <div class="card-tools">
                    <a href="/User/Create" class="btn btn-primary">新增使用者</a>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="usersTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>帳號</th>
                            <th>Email</th>
                            <th>角色</th>
                            <th>狀態</th>
                            <th>建立時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                ajax: function(data, callback, settings) {
                    // 自訂 AJAX 請求，對應我們的 API
                    var pageNumber = Math.floor(data.start / data.length) + 1;
                    var pageSize = data.length;
                    $.get('/api/users?pageNumber=' + pageNumber + '&pageSize=' + pageSize)
                        .done(function(result) {
                            callback({
                                data: result.items,
                                recordsTotal: result.totalCount,
                                recordsFiltered: result.totalCount
                            });
                        })
                        .fail(function() {
                            // 處理錯誤
                            callback({
                                data: [],
                                recordsTotal: 0,
                                recordsFiltered: 0
                            });
                        });
                },
                columns: [
                    { data: 'username', title: '帳號' },
                    { data: 'email', title: 'Email' },
                    { data: 'role', title: '角色' },
                    {
                        data: 'isActive',
                        title: '狀態',
                        render: function(data, type, row) {
                            return data ? '<span class="badge badge-success">啟用</span>' : '<span class="badge badge-danger">停用</span>';
                        }
                    },
                    {
                        data: 'createdAt',
                        title: '建立時間',
                        render: function(data, type, row) {
                            return new Date(data).toLocaleString('zh-TW');
                        }
                    },
                    {
                        data: 'id',
                        title: '操作',
                        orderable: false,
                        render: function(data, type, row) {
                            return '<a href="/User/Details/' + data + '" class="btn btn-info btn-sm">檢視</a> ' +
                                   '<a href="/User/Edit/' + data + '" class="btn btn-warning btn-sm">編輯</a> ' +
                                   '<button class="btn btn-danger btn-sm" onclick="deleteUser(\'' + data + '\')">刪除</button>';
                        }
                    }
                ],
                paging: true,
                searching: true,
                ordering: true,
                serverSide: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Chinese-traditional.json' // 中文化
                }
            });
        });

        // 刪除使用者函數
        function deleteUser(id) {
            Swal.fire({
                title: '確認刪除',
                text: '確定要刪除此使用者嗎？此操作無法復原。',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: '刪除',
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/api/users/' + id,
                        type: 'DELETE',
                        success: function() {
                            toastr.success('使用者已成功刪除');
                            $('#usersTable').DataTable().ajax.reload();
                        },
                        error: function(xhr, status, error) {
                            toastr.error('刪除失敗：' + error);
                        }
                    });
                }
            });
        }
    </script>
}